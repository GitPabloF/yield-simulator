<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Yield Simulator | Emerald Stay</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="icon" type="image/x-icon" href="/icons/favicon.ico">
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <!-- Hero -->
  <header class="hero-section text-white py-5">
    <div class="container">
      <a class="navbar-brand" href="https://emeraldstay.com">
        <img src="/icons/EmeraldStay_Logo.svg" alt="Emerald Stay" height="24" class="mb-2 logo-reversed" />
      </a>
    </div>
    <div class="container py-4">
      <h1 class="display-5 mb-3">Yield Simulator</h1>
      <p class="lead mb-0 opacity-75">Calculate the potential return of your property investment</p>
    </div>
  </header>

  <!-- Main Content -->
  <main class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">

          <!-- Form Card -->
          <div class="card shadow-sm">
            <div class="card-body p-4 p-md-5">
              <form id="simulationForm" novalidate>

                <!-- Property Details -->
                <h2 class="h5 mb-4">Property Details</h2>

                <div class="row g-3">
                  <div class="col-md-4">
                    <label for="purchasePrice" class="form-label">Purchase Price (€)</label>
                    <input type="number" class="form-control" name="purchasePrice" id="purchasePrice" required min="1"
                      placeholder="100000" />
                  </div>

                  <div class="col-md-4">
                    <label for="monthlyRent" class="form-label">Monthly Rent (€)</label>
                    <input type="number" class="form-control" name="monthlyRent" id="monthlyRent" required min="0"
                      placeholder="1000" />
                  </div>

                  <div class="col-md-4">
                    <label for="annualRentalFee" class="form-label">Annual Fees (€)</label>
                    <input type="number" class="form-control" name="annualRentalFee" id="annualRentalFee" required
                      min="0" placeholder="1200" />
                  </div>
                </div>

                <!-- Data-Driven Toggle -->
                <div class="border-top border-top border-bottom py-3 mb-4 mt-4">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="useDataDriven"
                      name="useDataDriven" value="true" />
                    <label class="form-check-label" for="useDataDriven">
                      <strong>Enable Data-Driven Prediction</strong>
                      <small class="d-block text-muted">Compare with similar properties from our database</small>
                    </label>
                  </div>
                </div>

                <!-- Data-Driven Fields -->
                <div class="data-driven-section pb-4 border-bottom" id="dataDrivenSection">
                  <h2 class="h5 mb-4">Property Characteristics</h2>

                  <div class="row g-3">
                    <div class="col-md-4">
                      <label for="surface" class="form-label">Surface (m²)</label>
                      <input type="number" class="form-control" name="surface" id="surface" min="10" max="500"
                        placeholder="65" />
                    </div>

                    <div class="col-md-4">
                      <label for="bedrooms" class="form-label">Bedrooms</label>
                      <select class="form-select" name="bedrooms" id="bedrooms">
                        <option value="">Select...</option>
                        <option value="1">1 bedroom</option>
                        <option value="2">2 bedrooms</option>
                        <option value="3">3 bedrooms</option>
                        <option value="4">4 bedrooms</option>
                        <option value="5">5+ bedrooms</option>
                      </select>
                    </div>

                    <div class="col-md-4">
                      <label for="locationScore" class="form-label">Location Score (1-10)</label>
                      <input type="number" class="form-control" name="locationScore" id="locationScore" min="1" max="10"
                        step="0.1" placeholder="8" />
                    </div>
                  </div>
                </div>

                <!-- Prospect Email -->
                <div class="col-md-6 my-4">
                  <label for="prospectEmail" class="form-label">Your Email</label>
                  <input type="email" class="form-control" name="prospectEmail" id="prospectEmail" required
                    placeholder="your@email.com" />
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-primary btn-lg w-100">
                  Calculate Yield
                </button>

              </form>
            </div>
          </div>

          <!-- Results -->
          <div id="result" class="mt-4"></div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer py-4 mt-auto">
    <div class="container text-center">
      <img src="/icons/EmeraldStay_Logo.svg" alt="Emerald Stay" height="24" class="mb-2 logo-reversed" />
      <p class="small mb-0">© 2026 Emerald Stay. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/simulate.js"></script>
</body>

</html>